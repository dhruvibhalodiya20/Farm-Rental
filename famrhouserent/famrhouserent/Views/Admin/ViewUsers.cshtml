@model List<famrhouserent.Models.ViewModels.AuthViewModel>

@{
    ViewData["Title"] = "View Users";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="mt-4 mb-3 text-center">Registered Users</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Is Verified</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int i = 1;
            foreach (var user in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@(user.IsVerified ? "Yes" : "No")</td>
                    <td>
                        @if (!user.IsVerified)
                        {
                            <form method="post" asp-controller="Admin" asp-action="VerifyUser" style="display:inline;">
                                <input type="hidden" name="email" value="@user.Email" />
                                <button type="submit" class="btn btn-success btn-sm">Accept</button>
                            </form>

                            <form method="post" asp-controller="Admin" asp-action="RejectUser" style="display:inline; margin-left:5px;">
                                <input type="hidden" name="email" value="@user.Email" />
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-success">Verified</span>
                        }
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-danger">No users found.</td>
            </tr>
        }
    </tbody>
</table>
