@model famrhouserent.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Add User";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br>
<br>
<br>
<br>
<br>

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Create Account</h2>
            <p>Join FarmHouse Hub today</p>
        </div>

        <div class="auth-body">
            <form asp-action="AddUser" method="post" class="auth-form">
                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="Name" class="form-control" placeholder="Full Name" />
                        <i class="fas fa-user"></i>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email Address" />
                        <i class="fas fa-envelope"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        <i class="fas fa-lock"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                        <i class="fas fa-lock"></i>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="auth-btn">
                    <i class="fas fa-user-plus"></i>
                    Create Account
                </button>
            </form>

            <div class="divider">
                <span>or</span>
            </div>

            <div class="auth-links">
                <p>Already have an account? <a asp-action="Login" asp-controller="Admin">Sign In</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
