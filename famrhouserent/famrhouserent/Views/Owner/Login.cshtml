@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<br /><br />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center text-success mb-4">Login to Your Account</h3>

                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input name="email" type="email" class="form-control form-control-lg" placeholder="Enter email" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input name="password" type="password" class="form-control form-control-lg" placeholder="Enter password" required />
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100">Login</button>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <div class="text-center mt-3">
                        <a href="/Owner/Register">Don't have an account? Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
