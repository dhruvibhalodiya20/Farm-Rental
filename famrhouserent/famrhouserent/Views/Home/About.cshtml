@{
    ViewData["Title"] = "About Us - FarmHouse Hub";
}

<div class="about-hero">
    <div class="overlay"></div>
    <div class="container">
        <h1>About FarmHouse Hub</h1>
        <p>Your trusted partner in finding the perfect farmhouse getaway</p>
    </div>
</div>

<div class="about-container">
    <div class="mission-vision-section">
        <div class="container">
            <div class="card-grid">
                <div class="info-card">
                    <div class="icon">
                        <i class="fas fa-bullseye"></i>
                    </div>
                    <h3>Our Mission</h3>
                    <p>To provide exceptional farmhouse stays that combine luxury with authentic rural experiences.</p>
                </div>

                <div class="info-card">
                    <div class="icon">
                        <i class="fas fa-eye"></i>
                    </div>
                    <h3>Our Vision</h3>
                    <p>To become India's most trusted platform for unique farmhouse experiences.</p>
                </div>

                <div class="info-card">
                    <div class="icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <h3>Our Values</h3>
                    <p>Quality, Trust, Customer satisfaction, and Community support.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="story-section">
        <div class="container">
            <div class="content-grid">
                <div class="story-content">
                    <h2>Our Story</h2>
                    <p>FarmHouse Hub was founded with a vision to connect people with nature through unique farmhouse experiences. We carefully curate the best farmhouse properties across India.</p>
                    
                    <div class="achievement-boxes">
                        <div class="achievement-box">
                            <span class="number">500+</span>
                            <span class="label">Properties</span>
                        </div>
                        <div class="achievement-box">
                            <span class="number">10k+</span>
                            <span class="label">Happy Guests</span>
                        </div>
                        <div class="achievement-box">
                            <span class="number">50+</span>
                            <span class="label">Locations</span>
                        </div>
                    </div>
                </div>
                <div class="story-image">
                    <img src="https://images.unsplash.com/photo-1516571748831-5d81767b788d" alt="FarmHouse Hub Experience">
                </div>
            </div>
        </div>
    </div>

    <div class="features-section">
        <div class="container">
            <h2>Why Choose Us?</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <i class="fas fa-check-circle"></i>
                    <h4>Verified Properties</h4>
                    <p>All properties are personally verified for quality and safety</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-headset"></i>
                    <h4>24/7 Support</h4>
                    <p>Round-the-clock customer service for all your needs</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-shield-alt"></i>
                    <h4>Secure Booking</h4>
                    <p>Safe and secure payment process</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-hand-holding-heart"></i>
                    <h4>Best Price</h4>
                    <p>Competitive prices with no hidden charges</p>
                </div>
            </div>
        </div>
    </div>
</div>