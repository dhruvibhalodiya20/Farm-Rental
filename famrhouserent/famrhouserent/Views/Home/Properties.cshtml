@{
    ViewData["Title"] = "Our Properties - FarmHouse Hub";
}

<div class="properties-hero">
    <div class="overlay"></div>
    <div class="container">
        <h1>Discover Our Farmhouses</h1>
        <p>Find your perfect getaway among our carefully curated properties</p>
    </div>
</div>

<div class="filter-section">
    <div class="container">
        <div class="filter-wrapper">
            <div class="filter-group">
                <label><i class="fas fa-map-marker-alt"></i> Location</label>
                <select id="location" class="custom-select">
                    <option value="">All Locations</option>
                    <option value="riverside">Riverside</option>
                    <option value="hillside">Hillside</option>
                    <option value="countryside">Countryside</option>
                </select>
            </div>

            <div class="filter-group">
                <label><i class="fas fa-users"></i> Guests</label>
                <select id="guests" class="custom-select">
                    <option value="">Any</option>
                    <option value="1-5">1-5 Guests</option>
                    <option value="6-10">6-10 Guests</option>
                    <option value="11+">11+ Guests</option>
                </select>
            </div>

            <div class="filter-group">
                <label><i class="fas fa-swimming-pool"></i> Amenities</label>
                <select id="amenities" class="custom-select">
                    <option value="">All Amenities</option>
                    <option value="pool">Swimming Pool</option>
                    <option value="bonfire">Bonfire Area</option>
                    <option value="bbq">BBQ</option>
                </select>
            </div>

            <div class="filter-group">
                <label><i class="fas fa-rupee-sign"></i> Price Range</label>
                <select id="price" class="custom-select">
                    <option value="">Any Price</option>
                    <option value="budget">₹5,000 - ₹10,000</option>
                    <option value="mid">₹10,000 - ₹15,000</option>
                    <option value="premium">₹15,000+</option>
                </select>
            </div>

            <button class="btn-filter">
                <i class="fas fa-filter"></i> Apply Filters
            </button>
        </div>
    </div>
</div>

