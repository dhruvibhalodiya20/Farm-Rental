<div id="propertyList" class="property-grid">
    @foreach (var farmhouse in Model)
    {
        <div class="farmhouse-card">
            <div class="farmhouse-img">
                <img src="@Url.Content(farmhouse.ImageUrl)" alt="@farmhouse.Name" />
            </div>
            <div class="farmhouse-info">
                <h3>@farmhouse.Name</h3>
                <p class="location"><i class="fas fa-map-marker-alt"></i> @farmhouse.Location</p>
                <div class="amenities">
                    <span><i class="fas fa-bed"></i> @farmhouse.Bedrooms Bedrooms</span><br />
                    <span><i class="fas fa-campground"></i> @farmhouse.Amenities</span><br />
                    <span><i class="fas fa-users"></i> Up to @farmhouse.MaxGuests guests</span>
                </div>
                <p class="price">₹@farmhouse.PricePerNight <span>per night</span></p>
                <a asp-controller="FarmHouse" asp-action="Details" asp-route-id="@farmhouse.Id" class="btn-secondary">View Details</a>
            </div>
        </div>
    }
</div>

<section class="cta">
    <div class="container">
        <div class="cta-content">
            <h2>Found Your Perfect Farmhouse?</h2>
            <p>Contact us now to check availability and book your stay.</p>
            <a asp-controller="Home" asp-action="Contact" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Contact" ? "active" : "")">Contact us</a>
        </div>
    </div>
</section>
<script>
    document.querySelector('.btn-filter').addEventListener('click', function () {
        const location = document.getElementById('location').value;
        const guests = document.getElementById('guests').value;
        const amenities = document.getElementById('amenities').value;
        const price = document.getElementById('price').value;

        const cards = document.querySelectorAll('.farmhouse-card');

        cards.forEach(card => {
            const matchesLocation = !location || card.dataset.location === location;
            const matchesGuests = !guests || card.dataset.guests === guests;
            const matchesAmenities = !amenities || card.dataset.amenities === amenities;
            const matchesPrice = !price || card.dataset.price === price;

            if (matchesLocation && matchesGuests && matchesAmenities && matchesPrice) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    });
</script>
