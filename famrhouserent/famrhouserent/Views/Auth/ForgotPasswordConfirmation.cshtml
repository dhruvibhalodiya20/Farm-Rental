@{
    ViewData["Title"] = "Password Reset Confirmation";
}
<br>
<br>
<br>
<br>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h2>OTP Sent</h2>
                    @if (TempData["Message"] != null)
                    {
                        <p class="mt-3">@TempData["Message"]</p>
                    }
                    else
                    {
                        <p class="mt-3">
                            If your email exists in our system, you will receive an OTP to reset your password.
                            Please check your email.
                        </p>
                    }
                    <a asp-action="Login" class="btn btn-primary mt-3">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
