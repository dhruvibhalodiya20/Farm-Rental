@model famrhouserent.Models.ViewModels.ResetPasswordViewModel
<br>
<br>
<br>
<br>
<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Reset Password</h2>
            <p>Create your new password</p>
        </div>

        <div class="auth-body">
            <form asp-action="ResetPassword" method="post" class="auth-form">
                <input type="hidden" asp-for="Email" value="@ViewBag.Email" />
                
                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="NewPassword" type="password" placeholder="New Password">
                        <i class="fas fa-lock"></i>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <div class="password-strength"></div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password">
                        <i class="fas fa-lock"></i>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="auth-btn">
                    <i class="fas fa-key"></i>
                    Reset Password
                </button>
            </form>
        </div>
    </div>
</div><br>
<br>
