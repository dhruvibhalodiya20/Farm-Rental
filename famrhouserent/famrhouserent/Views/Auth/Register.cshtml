@model famrhouserent.Models.ViewModels.RegisterViewModel
<br>
<br>
<br>
<br>
<br>
<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Create Account</h2>
            <p>Join FarmHouse Hub today</p>
        </div>

        <div class="auth-body">
            <form asp-action="Register" method="post" class="auth-form">
                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="Name" placeholder="Full Name">
                        <i class="fas fa-user"></i>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="Email" type="email" placeholder="Email Address">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="Password" type="password" placeholder="Password">
                        <i class="fas fa-lock"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="password-strength"></div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password">
                        <i class="fas fa-lock"></i>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="auth-btn">
                    <i class="fas fa-user-plus"></i>
                    Create Account
                </button>
            </form>

            <div class="divider">
                <span>or</span>
            </div>

            <div class="auth-links">
                <p>Already have an account? <a asp-action="Login">Sign In</a></p>
            </div>
        </div>
    </div>
</div>
<br>
<br>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
