@model famrhouserent.Models.ViewModels.ForgotPasswordViewModel
<br>
<br>
<br>

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Forgot Password</h2>
            <p>Enter your email to receive a password reset OTP</p>
        </div>
        
        <div class="auth-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    @TempData["ErrorMessage"]
                </div>
            }
            
            <form asp-action="ForgotPassword" method="post" class="auth-form">
                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="Email" type="email" placeholder="Enter your email">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="auth-btn">
                    <i class="fas fa-paper-plane"></i>
                    Send Reset OTP
                </button>
            </form>

            <div class="auth-links">
                <a asp-action="Login">Back to Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}